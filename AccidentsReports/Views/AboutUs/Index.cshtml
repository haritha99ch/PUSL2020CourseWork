@model AccidentsReports.Models.AboutUs

@using AccidentsReports.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    <div class="agileits_w3layouts">
        <h1 class="agile_head text-left">About Us</h1>
        <p><b>We care about building a quality things, trusted relationships with our customers, and a sense of community that connects our customers and team with one another.</b></p>
        <h1 class="agile_head text-center ">Feedback Form</h1>
        <div class="wrap">
            <div class=" m-auto">
                <h3>Please help us to serve you better by taking a couple of minutes. </h3>
                @Html.ValidationMessageFor(model => model.Service, "", new { @class = "text-danger" })
                <h2>@Html.LabelFor(model => model.Service, new { @class = "form-label" })</h2>
                <ul class="agile_info_select">
                    @foreach (var item in Enum.GetValues(typeof(Service)).Cast<Service>().ToList()) {
                        <li>
                            @Html.RadioButtonFor(model => model.Service, item, new { id = item, @class = "radio" })
                            @Html.Label(item.ToString(), new { @for = item, @class = "fs-5" })
                        </li>
                    }
                </ul>
                <h2 class="form-label">If you have specific feedback, please write to us...</h2>
                @Html.ValidationMessageFor(model => model.Feedback, "", new { @class = "text-danger" })
                @Html.TextAreaFor(model => model.Feedback, new { placeholder = "Additional comments" })
                <div class="row">
                    <div class="col">
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(model => model.Name, new { placeholder = "Your Name" })
                    </div>
                    <div class="col">
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(model => model.Email, new { placeholder = "Your Email" })
                    </div>
                </div>
            </div>
            <input type="submit" value="Submit" class="btn-primary"/>
        </div>
    </div>
}

