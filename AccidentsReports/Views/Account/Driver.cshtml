@model AccidentsReports.Models.Driver

@{
    ViewBag.Title = "Driver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-4 position-fixed bg-light h-100">
        <h2>Account</h2>
        @*@{
            Html.RenderPartial("User");
        }*@
