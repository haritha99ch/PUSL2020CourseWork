                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.Address, new { @class = "form-label" })
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Address)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.PhoneNumber, new { @class = "form-label" })
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <h4>Driver</h4>
        <div class="row">
            <div class="col-auto">
                @Html.LabelFor(model => model.LicenceNumber, new { @class = "form-label" })
            </div>
            <div class="col-auto">
                @Html.DisplayFor(model => model.LicenceNumber)
            </div>
        </div>
    </div>
