@model AccidentsReports.Models.ReportDetail
@{
    int i = (int)Session["VehicleCount"];
}


<div class="col-4">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <hr />
    <h6>New Vehicle</h6>
    <div class="row">
        <div class="col">
            @Html.LabelFor(model => model.Vehicles[i].PlateNumber, htmlAttributes: new { @class = "control-label" })
            @Html.ValidationMessageFor(model => model.Vehicles[i].PlateNumber, "", new { @class = "text-danger" })
            @Html.EditorFor(model => model.Vehicles[i].PlateNumber, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
        </div>
        <div class="col">
            <div class="row">
                @Html.LabelFor(model => model.Vehicles[i].Class, htmlAttributes: new { @class = "control-label" })
            </div>
            @Html.ValidationMessageFor(model => model.Vehicles[i].Class, "", new { @class = "text-danger" })
            @Html.EnumDropDownListFor(model => model.Vehicles[i].Class, new { @class = "btn btn-outline-secondary dropdown-toggle", @required = "true" })
        </div>
    </div>
    <div class="row">
        <div class="col">
            @Html.LabelFor(model => model.Vehicles[i].ModelName, htmlAttributes: new { @class = "control-label" })
            @Html.ValidationMessageFor(model => model.Vehicles[i].ModelName, "", new { @class = "text-danger" })
            @Html.EditorFor(model => model.Vehicles[i].ModelName, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
        </div>
    </div>
</div>

